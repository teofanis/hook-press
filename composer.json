{
    "name": "teofanis/hook-press",
    "description": "HookPress is a Laravel package that uses Composer hooks to automatically discover, filter, and cache classes, traits, and interfaces in your application",
    "keywords": [
        "Teofanis Papadopulos",
        "laravel",
        "hook-press",
        "hookpress",
        "hook-press",
        "laravel",
        "laravel-package",
        "composer-hook",
        "composer-scripts",
        "post-install-cmd",
        "post-update-cmd",
        "class-discovery",
        "service-discovery",
        "driver-discovery",
        "classmap",
        "autoload",
        "reflection",
        "php8-attributes",
        "traits",
        "interfaces",
        "registry",
        "artisan",
        "cache",
        "bootstrap-cache",
        "psr-4",
        "plugin-discovery"
    ],
    "homepage": "https://github.com/teofanis/hook-press",
    "license": "MIT",
    "authors": [
        {
            "name": "Teofanis Papadopulos",
            "email": "hook-press@teofanis-cloud.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^9.0||^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0",
        "composer/composer": "^2.8",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "marcocesarato/php-conventional-changelog": "^1.17",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-profanity": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.1",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "HookPress\\": "src/"
        },
        "files": ["src/polyfills.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "HookPress\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "test": "vendor/bin/pest",
        "test:ci": "vendor/bin/pest --coverage --min=100 --type-coverage --min=100 --profanity --ci",
        "rector": "vendor/bin/rector",
        "format": "vendor/bin/pint",
        "changelog": "conventional-changelog",
        "release": "conventional-changelog --commit",
        "release:patch": "conventional-changelog --patch --commit",
        "release:minor": "conventional-changelog --minor --commit",
        "release:major": "conventional-changelog --major --commit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HookPress\\HookPressServiceProvider"
            ],
            "aliases": {
                "HookPress": "HookPress\\Facades\\HookPress"
            }
        },
        "hooks": {
            "config": {
                "stop-on-failure": [
                    "pre-commit",
                    "commit-msg"
                ]
            },
            "pre-commit": [
                "composer run format",
                "composer run rector"
            ],
            "commit-msg": "grep -qE '^(feat|perf|fix|docs|refactor|style|test|build|chore|ci|revert)(\\(.+\\))?: .{1,150}$' $1"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
